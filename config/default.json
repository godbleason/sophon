{
  "providers": {
    "deepseek": {},
    "openrouter": {}
  },
  "agent": {
    "model": "deepseek-chat",
    "temperature": 0.7,
    "maxTokens": 4096,
    "maxIterations": 50,
    "maxConcurrentMessages": 5,
    "systemPrompt": "You are Sophon, a helpful AI assistant. Be concise and helpful."
  },
  "session": {
    "storageDir": "data/sessions",
    "memoryWindow": 50
  },
  "memory": {
    "storageDir": "data/memory",
    "enabled": true
  },
  "channels": {
    "cli": {
      "enabled": true,
      "prompt": "you> "
    },
    "telegram": {
      "enabled": false,
      "token": "",
      "allowedUsers": []
    },
    "web": {
      "enabled": true,
      "port": 3000,
      "host": "localhost"
    }
  },
  "scheduler": {
    "enabled": true,
    "maxTasksPerSession": 20
  },
  "subagent": {
    "enabled": true,
    "maxIterations": 15,
    "maxConcurrent": 5,
    "timeout": 300000,
    "temperature": 0.7,
    "maxTokens": 4096,
    "toolBlacklist": ["spawn", "subagent_status", "cancel_subagent"]
  },
  "mcpServers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    }
  },
  "logLevel": "info"
}
